# OAuth Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# Client Credentials (from Carbon Voice API team)
OAUTH_CLIENT_ID=YOUR_CLIENT_ID
OAUTH_CLIENT_SECRET=YOUR_CLIENT_SECRET

# Redirect URL (must match what you registered with Carbon Voice)
OAUTH_REDIRECT_URL=YOUR_REDIRECT_URL

# OAuth Endpoints (from https://api.carbonvoice.app/.well-known/oauth-authorization-server)
OAUTH_AUTH_URL=https://api.carbonvoice.app/oauth/authorize
OAUTH_TOKEN_URL=https://api.carbonvoice.app/oauth/token

# API Base URL
API_BASE_URL=https://api.carbonvoice.app
